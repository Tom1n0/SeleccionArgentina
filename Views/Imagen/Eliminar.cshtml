@model Imagen
@{
    ViewData["Title"] = "Eliminar";
}

<a class="btn btn-outline-dark" type="button" asp-controller="Imagen" asp-action="Index">Volver</a>
<br />
<br />

<form enctype="multipart/form-data" class="container-fluid" method="post">
    <div class="card mb-6">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="data:image/jpg; base64, @Model.Image" class="rounded" width="400">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">Registro</h5>
                    <table class="table">
                        <input hidden asp-for="IdImagen" />
                        <tr>
                            <td>
                                <label class="form-label">Nombre:</label>
                            </td>
                            <td>
                                <input disabled type="text" class="form-control" asp-for="Nombre" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label class="form-label">Edad:</label>
                            </td>
                            <td>
                                <input disabled type="text" class="form-control" asp-for="Edad" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label class="form-label">Equipo:</label>
                            </td>
                            <td>
                                <input disabled type="text" class="form-control" asp-for="Equipo" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label class="form-label">Altura:</label>
                            </td>
                            <td>
                                <input disabled type="text" class="form-control" asp-for="Altura" />
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <button type="submit" class="btn btn-outline-danger">Eliminar</button>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</form>
<label class="alert-danger">@ViewBag.error</label>
